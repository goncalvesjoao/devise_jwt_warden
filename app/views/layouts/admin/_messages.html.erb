<%
  message = nil

  if notice.present?
    message = notice
    css_class = 'info'
  else alert.present?
    message = alert
    css_class = 'danger'
  end
%>

<% if message %>
  <div class="alert alert-<%= css_class %> alert-dismissible fade show" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>

    <%= message %>
  </div>
<% end %>

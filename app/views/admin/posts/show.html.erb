<div class="col-12">
  <div class="d-flex justify-content-end">
    <h2 class="mr-auto">
      Post
      <span class="badge badge-default">id: <%= @post.id %></span>
    </h2>

    <p><%= link_to fa_icon('pencil', text: 'Edit'), edit_admin_post_path(@post, context_params), class: 'btn btn-primary', role: 'button' %></p>
    <p><%= link_to fa_icon('arrow-left', text: 'See all'), admin_posts_path(context_params), class: 'btn btn-secondary ml-1', role: 'button' %></p>
  </div>

  <p>
    <strong>Title:</strong>
    <%= @post.title %>
  </p>
  <p>
    <strong>Body:</strong>
    <%= @post.body %>
  </p>
  <p>
    <strong>State:</strong>
    <%= @post.state %>
  </p>
</div>
